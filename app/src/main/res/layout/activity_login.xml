<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_admin_main_page"
    tools:context=".ActivityLogin"
    >


    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:fontFamily="@font/krabbypatty"
        android:layout_height="wrap_content"
        android:text="Nuevo en estos Mares? Crea una Cuenta"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:fontFamily="@font/krabbypatty"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#8884d9"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/EdtCorreoLogin"
        tools:layout_editor_absoluteX="44dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EdtCorreoLogin"
        android:fontFamily="@font/krabbypatty"

        android:layout_width="221dp"
        android:layout_height="36dp"
        android:background="@drawable/inputs_custom"
        android:ems="10"
        android:hint="CorreoElectronico@hotmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397"
        android:drawableLeft="@drawable/ic_mail" />



    <EditText
        android:id="@+id/EdtClaveLogin"
        android:layout_width="224dp"
        android:layout_height="37dp"
        android:fontFamily="@font/krabbypatty"

        android:layout_marginTop="28dp"
        android:background="@drawable/inputs_custom"
        android:ems="10"
        android:hint="Clave"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdtCorreoLogin"
        app:layout_constraintVertical_bias="0.055"
        android:drawableLeft="@drawable/ic_pass" />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="229dp"
        android:layout_height="64dp"
        android:text="Login"
        android:fontFamily="@font/krabbypatty"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdtClaveLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>