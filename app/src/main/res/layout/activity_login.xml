<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_admin_main_page"
    tools:context=".ActivityLogin"
    >


    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/krabbypatty"
        android:text="Nuevo en estos Mares? Crea una Cuenta"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:fontFamily="@font/krabbypatty"
        android:gravity="center_horizontal"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#8884d9"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EdtCorreoLogin"
        android:layout_width="250dp"

        android:layout_height="36dp"
        android:background="@drawable/inputs_custom"
        android:drawableLeft="@drawable/ic_mail"
        android:ems="10"
        android:fontFamily="@font/krabbypatty"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />


    <EditText
        android:id="@+id/EdtClaveLogin"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/inputs_custom"
        android:drawableLeft="@drawable/ic_pass"
        android:ems="10"
        android:hint="Clave"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdtCorreoLogin"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="229dp"
        android:layout_height="64dp"
        android:background="@drawable/order_sale_btn"
        android:fontFamily="@font/krabbypatty"

        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <TextView
        android:id="@+id/errorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/krabbypatty"
        android:textSize="20sp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/EdtCorreoLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

</androidx.constraintlayout.widget.ConstraintLayout>